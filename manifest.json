{
    "name": "Panopto Downloader",
    "version": "1.3.2",
    "description": "Downloads Panopto videos. Tested with the University of Cambridge Panopto website.",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "downloads",
        "activeTab",
        "https://*.panopto.eu/*",
        "https://*.panopto.com/*"
    ],
    "content_scripts": [{
        "js": [
            "panoptodl.js"
        ],
        "matches": [
            "https://*.panopto.eu/*",
            "https://*.panopto.com/*"
        ]
    }]
}